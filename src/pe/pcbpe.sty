\newcommand{\Line}[4]{%
  \largeit #1 & %
  \largeit #2 & %
  \makebox[8mm]{\largeit #3} & %
  \largeit #4 %
  \tabularnewline%
  }%

\newcommand{\Part}[1]{% Добавить раздел, #1 - имя раздела
  \tabularnewline%
%  \Line{}{\hfill \raisebox{0.8mm}{\underline{\largeit #1}} \hfill}{}{}%
  \Line{}{\hfill \underline{\raisebox{0mm}[0mm][0mm]{#1}} \hfill}{}{}%
  \tabularnewline%
  }%

\newcommand{\refbox}[1]{%
  \makebox[19mm]{#1}%
  }%

\newcommand{\Element}[4][]{% Добавить элемент
  % #1 - примечание (необязательно),
  % #2 - наименование,
  % #3 - позиционное обозначение,
  % #4 - количество
  \Line{\largeit #3}{#2}{#4}{#1}%
  \tabularnewline%
  }%

\ifthenelse{\equal{\compactmode}{compactmode}}{%
\renewcommand{\Element}[4][]{% Добавить элемент
  % #1 - примечание (необязательно),
  % #2 - наименование,
  % #3 - позиционное обозначение,
  % #4 - количество
  \Line{\largeit #3}{#2}{#4}{#1}%
  }%
}{}%

